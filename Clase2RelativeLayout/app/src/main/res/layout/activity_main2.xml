<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">


    <Button
        android:layout_width="70sp"
        android:layout_height="70sp"
        android:text="5"
        android:textSize="35sp"
        android:backgroundTint="#E91E63"
        android:layout_centerInParent="true"
        android:id="@+id/bt5"
        />


    <Button
        android:id="@+id/bt4"
        android:layout_width="70sp"
        android:layout_height="70sp"
        android:layout_centerVertical="true"
        android:layout_marginRight="14dp"
        android:layout_toLeftOf="@+id/bt5"
        android:backgroundTint="#FF0000"
        android:text="4"
        android:textSize="35sp" />

    <Button
        android:id="@+id/bt6"
        android:layout_width="70sp"
        android:layout_height="70sp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="14dp"
        android:layout_toRightOf="@+id/bt5"
        android:backgroundTint="#9C27B0"
        android:text="6"
        android:textSize="35sp" />

    <Button
        android:id="@+id/bt2"
        android:layout_width="70sp"
        android:layout_height="70sp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp"
        android:layout_above="@+id/bt5"
        android:backgroundTint="#4CAF50"
        android:text="2"
        android:textSize="35sp" />

    <Button
        android:id="@+id/bt8"
        android:layout_width="70sp"
        android:layout_height="70sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/bt5"
        android:backgroundTint="#3F51B5"
        android:lineSpacingExtra="10sp"
        android:text="8"
        android:textSize="35sp" />


    <Button
        android:id="@+id/bt1"
        android:layout_width="70sp"
        android:layout_height="70sp"
        android:layout_above="@+id/bt4"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginBottom="14dp"
        android:layout_toLeftOf="@id/bt2"
        android:backgroundTint="#E91E63"
        android:lineSpacingExtra="10sp"
        android:text="1"
        android:textSize="35sp" />

    <Button
        android:id="@+id/bt3"
        android:layout_width="70sp"
        android:layout_height="70sp"
        android:layout_above="@+id/bt6"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginBottom="14dp"
        android:layout_toRightOf="@id/bt2"
        android:backgroundTint="#FF0000"
        android:lineSpacingExtra="10sp"
        android:text="3"
        android:textSize="35sp" />

    <Button
        android:id="@+id/bt7"
        android:layout_width="70sp"
        android:layout_height="70sp"
        android:layout_below="@+id/bt4"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginBottom="14dp"
        android:layout_toLeftOf="@id/bt8"
        android:backgroundTint="#00BCD4"
        android:lineSpacingExtra="10sp"
        android:text="7"
        android:textSize="35sp" />

    <Button
        android:id="@+id/bt9"
        android:layout_width="70sp"
        android:layout_height="70sp"
        android:layout_below="@+id/bt6"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginBottom="14dp"
        android:layout_toRightOf="@id/bt8"
        android:backgroundTint="#FFC107"
        android:lineSpacingExtra="10sp"
        android:text="9"
        android:textSize="35sp" />

</RelativeLayout>